########################################
# Airtable OAuth Configuration (NUEVO)
########################################
AIRTABLE_CLIENT_ID=tu_client_id
AIRTABLE_CLIENT_SECRET=tu_client_secret

# Debe coincidir EXACTAMENTE con la URL configurada en la app de Airtable
OAUTH_REDIRECT_URI=https://airtable.fastmcp.app/airtable/callback

# Permisos mínimos recomendados
AIRTABLE_SCOPES="data.records:read data.records:write schema.bases:read"


########################################
# Airtable Legacy PAT (Opcional)
########################################
AIRTABLE_PERSONAL_ACCESS_TOKEN=
AIRTABLE_BASE_ID=   # si no lo usas, déjalo vacío porque lo cargas desde Mongo


########################################
# MCP Server Configuration
########################################
PORT=8000
HOST=0.0.0.0
INTERNAL_MCP_URL=http://127.0.0.1:9001
FASTMCP_LOG_LEVEL=INFO
FASTMCP_TRANSPORT=http


########################################
# Back4App / Mongo (donde guardas BaseID/Keys)
########################################
PARSE_APP_ID=tu_app_id
PARSE_JAVASCRIPT_KEY=tu_javascript_key
PARSE_REST_API_KEY=tu_rest_api_key
PARSE_SERVER_URL=https://parseapi.back4app.com


########################################
# Seguridad
########################################
JWT_SECRET_KEY=mi_clave_secreta_123
ALLOWED_BASES=app1234567890,app0987654321
ALLOWED_TABLES=Users,Products,Orders


########################################
# TOON
########################################
TOON_ENABLED=true
TOON_FORMAT=compact
