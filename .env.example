# Configuración de Airtable
AIRTABLE_PERSONAL_ACCESS_TOKEN=tu_token_de_airtable
AIRTABLE_BASE_ID=tu_base_id_de_airtable

# Configuración del servidor
PORT=8000
HOST=0.0.0.0

# Configuración de FastMCP (opcional, si usas autenticación o gobernanza)
FASTMCP_LOG_LEVEL=INFO
FASTMCP_TRANSPORT=http

# Configuración de autenticación (si usas JWT u otro método)
JWT_SECRET_KEY=tu_clave_secreta_para_jwt
ALLOWED_BASES=base1,base2,base3
ALLOWED_TABLES=table1,table2,table3

# Configuración de TOON (opcional, si usas conversión de datos)
TOON_ENABLED=true
